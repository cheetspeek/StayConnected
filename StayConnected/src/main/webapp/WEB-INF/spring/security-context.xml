<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:sec="http://www.springframework.org/schema/security"
	xsi:schemaLocation="
http://www.springframework.org/schema/security
http://www.springframework.org/schema/security/spring-security-3.2.xsd
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<http auto-config="true" use-expressions="true">
		<form-login login-processing-url="/j_spring_security_check"
			login-page="/home" 
			default-target-url="/accounthome"
			always-use-default-target="true" 
			authentication-failure-url="/home?login_error=t" />
		
		<intercept-url pattern="/"	access="hasAnyRole('Faculty', 'Alumni', 'Student')" />	
		<intercept-url pattern="/accounthome"	access="hasAnyRole('Faculty', 'Alumni', 'Student')" />
		<intercept-url pattern="/createlisting"	access="hasAnyRole('Faculty', 'Alumni')" />
		<intercept-url pattern="/updatelisting"	access="hasAnyRole('Faculty', 'Alumni',)" />
		<intercept-url pattern="/viewlisting"	access="hasAnyRole('Faculty', 'Alumni', 'Student')" />
		<logout logout-success-url="/home" />
			
		<remember-me key="myappkey"
		token-validity-seconds="2419200" 
		data-source-ref="dataSource" 
		/> <!-- valid for 4 weeks --><!-- use mysql -->		
	</http>

	<authentication-manager>
		<authentication-provider>
			<jdbc-user-service id="userService"
				data-source-ref="dataSource"
				users-by-username-query="select email, password, true from account where email = ?"
				authorities-by-username-query="select  email, role from authority where email = ?" />
		</authentication-provider>
	</authentication-manager>
</beans:beans>
